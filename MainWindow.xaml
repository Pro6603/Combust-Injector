<Window x:Class="Combust_Injector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Artic"
        Height="450" Width="770"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Scrollbar style as-is -->
        <Style x:Key="ThinRoundedScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="2.5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="GridRoot" Background="{TemplateBinding Background}">
                            <Track Name="PART_Track" IsDirectionReversed="True" 
                                   Focusable="False" 
                                   IsEnabled="{TemplateBinding IsEnabled}">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageUpCommand" 
                                                  Style="{x:Null}" 
                                                  IsEnabled="False" 
                                                  Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageDownCommand" 
                                                  Style="{x:Null}" 
                                                  IsEnabled="False" 
                                                  Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Width="2.5" Margin="1,1,1,0" Cursor="Hand" Background="#3E3167">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="3" />
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Thumb" Property="Background" Value="#B57FFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Thumb" Property="Background" Value="#555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar" BasedOn="{StaticResource ThinRoundedScrollBar}" />
    </Window.Resources>

    <Border CornerRadius="10"
            BorderBrush="#20232E"
            BorderThickness="2"
            SnapsToDevicePixels="True"
            ClipToBounds="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" SpreadMethod="Pad">
                <GradientStop Color="#16191F" Offset="0.4" />
                <GradientStop Color="#1A1D24" Offset="0.7" />
                <GradientStop Color="#1C1F28" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Canvas x:Name="BackgroundCanvas" IsHitTestVisible="False" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- ✅ Updated: Use ItemsControl instead of StackPanel -->
                <ScrollViewer x:Name="CardsScrollViewer"
                              Grid.Column="0"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Background="Transparent"
                              MaxHeight="450"
                              CanContentScroll="True">
                    <ItemsControl x:Name="CardsItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Right Column: Card Info + Load Button -->
                <Grid Grid.Column="1" Background="Transparent">
                    <Border CornerRadius="10">
                        <Grid>
                            <Button x:Name="CloseButton"
                                    Width="28" Height="28"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,10,10,0"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Cursor="Hand"
                                    ToolTip="Close"
                                    Click="CloseButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="#3A4362"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="0"
                                                            CornerRadius="4">
                                                        <TextBlock Text="✕"
                                                                   FontSize="16"
                                                                   FontWeight="Bold"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{TemplateBinding Foreground}">
                                                            <TextBlock.Effect>
                                                                <DropShadowEffect Color="#242939"
                                                                                  ShadowDepth="0"
                                                                                  BlurRadius="2"
                                                                                  Opacity="0.2" />
                                                            </TextBlock.Effect>
                                                        </TextBlock>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2A314D"/>
                                                <Setter Property="Foreground" Value="#6077C3"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1A2335"/>
                                                <Setter Property="Foreground" Value="#5066B3"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock x:Name="SelectedCardText"
                                   Text="Select an option"
                                   Foreground="#FAFBFB"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,0,0,20">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#C3C3C5" BlurRadius="2" ShadowDepth="0" Opacity="0.3"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <Button x:Name="LoadButton"
                                Content="LOAD"
                                Width="150"
                                Height="40"
                                Background="#14161B"
                                BorderBrush="#14161B"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Visibility="Visible"
                                Cursor="Hand"
                                IsEnabled="False"
                                Opacity="0.95" Click="LoadButton_Click_1">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#14161B"/>
                                    <Setter Property="Foreground" Value="#C3C3C5"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                    <Setter Property="BorderBrush" Value="#20232E"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        SnapsToDevicePixels="True">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Margin="10,4"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black"
                                                                      ShadowDepth="0"
                                                                      BlurRadius="8"
                                                                      Opacity="0.0"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Background" Value="#14161B"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1A1D24"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="White"
                                                                      ShadowDepth="0"
                                                                      BlurRadius="10"
                                                                      Opacity="0.2"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
